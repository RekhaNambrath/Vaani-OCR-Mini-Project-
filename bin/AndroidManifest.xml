<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.arch.vaani.ocr"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="14"
        android:targetSdkVersion="21" />
	<uses-permission android:name="android.permission.CAMERA"></uses-permission>
	<uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
	<uses-permission android:name="android.permission.INTERNET" />
    <uses-feature android:name="android.hardware.camera" />
    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.example.arch.vaani.ocr.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        
        <activity 
            android:name="com.example.arch.vaani.ocr.SecondActivity"
            android:label="@string/next_name">
        </activity>
        <activity 
            android:name="com.google.android.apps.translate"
            android:label="@string/trans"></activity>
        <activity
            android:name="com.google.android.apps.translate.translation.TranslateActivity"
            android:label="@string/trans"></activity>
        <activity 
            android:name="com.example.arch.vaani.ocr.LanguageActivity"
            android:label="@string/choose">
        </activity>
         <activity 
            android:name="com.example.arch.vaani.ocr.FinalActivity"
            android:label="@string/result">
        </activity>
        
    </application>

</manifest>
